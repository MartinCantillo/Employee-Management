@model MvcProject.Models.Departamento

<div class="container">
    <div class="row justify-content-center">
        
        <div class="col-md-6">
            <br>
            
            <h1 class="text-center" style="font-style: oblique;">Registro de Departamento</h1>
            <hr>
            <br>

            @using (Html.BeginForm("GuardarD", "Departamento", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    @Html.TextBoxFor(x => x.NombreD, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.NombreD, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    <label for="area" class="form-label">√Årea</label>
                    @Html.TextBoxFor(x => x.AreaD, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.AreaD, "", new { @class = "text-danger" })
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            }
        </div>
    </div>
</div>
