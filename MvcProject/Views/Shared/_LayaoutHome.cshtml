<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Employee Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcProject.styles.css" asp-append-version="true" />
    <script src='main.js'></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="navbar-brand" asp-area="" asp-controller="Empleado" asp-action="RegistrarE"> Empleado</a>
            <a class="navbar-brand" asp-area="" asp-controller="Departamento" asp-action="RegistrarD"> Departamento</a>
            <div class="container-fluid">
                <div class="ml-auto"></div>
            </div>
             <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="SignIn">Sign in</a>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>

        </nav>
    </header>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
